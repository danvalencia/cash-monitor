<h2><%=@maquinet.name%>    <small><%= link_to('Editar', edit_maquinet_path(@maquinet)) %></small></h2>

<div class="row-fluid">
	<div class="span12">
		<fieldset>
			<legend>Información General</legend>	
			<div>
				<div class="span4"><strong>Identificador de Maquinet: </strong></strong> </div> <div class="span8"><%= @maquinet.machine_uuid %></div>
			</div>
			<div>
				<div class="span4"><strong>Dirección: </strong></div><div class="span8"><%= @maquinet.location %> </div>
			</div>
			<div>
				<div class="span4"><strong>Responsable: </strong></div><div class="span8"><%= @maquinet.contact_name %></div>
			</div>
			<div>
				<div class="span4"><strong>Número de Contacto: </strong></div><div class="span8"><%= number_to_phone(@maquinet.contact_phone_number, area_code: true)%></div>
			</div>
			<div>
				<div class="span4"><strong>Email de Contacto: </strong></div><div class="span8"><%= @maquinet.contact_email %></div>
			</div>
		</fieldset>
		<fieldset>
			<legend>Números Totales</legend>	
			<div>
				<div class="span4"><strong>Total de monedas:</strong> </div> <div class="span8"></div>
			</div>
			<div>
				<div class="span4"><strong>Ganancia al Año: </strong></div> <div class="span8"></div>
			</div>
			<div>
				<div class="span4"><strong>Ganancia al Mes: </strong></div> <div class="span8"></div>
			</div>
			<div>
				<div class="span4"><strong>Ganancia al Día: </strong></div> <div class="span8"></div>
			</div>
		</fieldset>
		<fieldset>
			<legend>Configuración de Moneda</legend>
			<div>
				<div class="span4"><strong>Tiempo de moneda: </strong></div><div class="span8"><%= @maquinet.coin_time %> minutos</div>
			</div>
			<div>
				<div class="span4"><strong>Valor de moneda: </strong></div><div class="span8"><%= number_to_currency(@maquinet.coin_value)%></div>
			</div>
		</fieldset>
	</div>
	<div class="span6">
		<fieldset>
			<legend>Gráficos</legend>
		</fieldset>		
	</div>
</div>
